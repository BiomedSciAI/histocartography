#!/usr/bin/env python3
"""
Introduce yourself script.
"""
import plac
from blueprint.complex_module.core import salutation


@plac.annotations(
    name=plac.Annotation(
        'Write your name.',
        type=str
    ),
    surname=(
        'Write your surname (if you have it). Defaults to "".',
        'option', 'surname', str
    )
   
)
def main(
    name, surname=''
):
    """Introduce yourself and salute."""
    introduction = 'My name is {} {}'.format(name, surname)
    print(salutation())
    print(introduction.strip())

if __name__ == '__main__':
    plac.call(main)
