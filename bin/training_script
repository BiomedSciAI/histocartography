#!/usr/bin/env python3
"""
Script for training histocartography models
"""
import plac
import logging
import sys
import os


from histocartography.core import tumor_classification_pipeline


# setup logging
#logging.basicConfig(stream=sys.stdout, level=logging.DEBUG)
log = logging.getLogger('Histocartography::Training')
h1 = logging.StreamHandler(sys.stdout)
log.setLevel(logging.INFO)
formatter = logging.Formatter('%(asctime)s - %(name)s - %(levelname)s - %(message)s')
h1.setFormatter(formatter)
log.addHandler(h1)

# Annotation format
# help string, kind, abbrev, type, choices, metavar
@plac.annotations(
    config=plac.Annotation(
        help="configuration file", kind="positional", type=str
        ),
    job=plac.Annotation( 
        help="job name", kind="option", type=str
        )
   
)
def main(
    config, job
):
    """Write out the params."""
    log.info('Configuration: {}'.format(config))
    log.info('Job Name: {}'.format(job))
    

if __name__ == '__main__':
    plac.call(main)
